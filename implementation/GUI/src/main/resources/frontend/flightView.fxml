<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.FlightController">
    <children>
        <HBox alignment="CENTER" prefHeight="33.0" prefWidth="178.0" style="-fx-background-color: lightblue;">
            <children>
                <Label alignment="CENTER" text="Store a flight" textFill="#4f78b0" underline="true">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        <GridPane prefHeight="90.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="106.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="flightName" prefHeight="25.0" prefWidth="122.0" GridPane.columnIndex="1" />
                <Label prefHeight="17.0" prefWidth="100.0" text="Flight name:" />
                <Label prefHeight="17.0" prefWidth="150.0" text="Departure Time:" GridPane.rowIndex="1" />
                <TextField fx:id="depTime" prefHeight="25.0" prefWidth="92.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label prefHeight="17.0" prefWidth="132.0" text="Arrival Time:" GridPane.rowIndex="2" />
                <TextField fx:id="arrTime" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="20.0">
            <children>
                <Button fx:id="ShowFlights" onAction="#showFlights" text="Show Flights" />
                <Button fx:id="StoreFlight" onAction="#storeFlight" prefHeight="25.0" prefWidth="89.0" text="Store Flight" />
            </children>
        </HBox>
      <Label fx:id="flightLabel" alignment="TOP_LEFT" prefHeight="112.0" prefWidth="400.0" style="-fx-border-style: solid;" />
      <HBox prefHeight="86.0" prefWidth="400.0" spacing="20.0">
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
        <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
