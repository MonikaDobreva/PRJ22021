<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.FlightController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="400.0">
            <children>
                <Label alignment="CENTER" text="Store a flight" textFill="#4f78b0">
                    <font>
                        <Font name="Calibri Bold Italic" size="25.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </HBox>
      <Separator prefHeight="0.0" prefWidth="400.0" />
        <GridPane prefHeight="204.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="106.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="178.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="33.0" minHeight="10.0" prefHeight="33.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="33.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="17.0" prefWidth="100.0" text="Flight number:" />
                <TextField fx:id="flightName" prefHeight="25.0" prefWidth="122.0" GridPane.columnIndex="1" />
                <Label prefHeight="17.0" prefWidth="150.0" text="Departure Time:" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                      <TextField fx:id="depTime" prefHeight="25.0" prefWidth="146.0" promptText="time: HH:MM">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
                  <DatePicker fx:id="depTimePicker" promptText="select date" showWeekNumbers="true" />
               </children>
            </HBox>
                <Label prefHeight="17.0" prefWidth="132.0" text="Arrival Time:" GridPane.rowIndex="2" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <children>
                    <TextField fx:id="arrTime" prefHeight="25.0" prefWidth="146.0" promptText="time: HH:MM">
                        <font>
                            <Font name="System Italic" size="12.0" />
                        </font>
                    </TextField>
                    <DatePicker fx:id="arrTimePicker" promptText="select date" showWeekNumbers="true" />
                </children>
            </HBox>
            <Label text="Airplane" GridPane.rowIndex="3" />
            <TextField fx:id="airplane" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="startAirport" promptText="IATA airport code" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></TextField>
            <TextField fx:id="destAirport" promptText="IATA airport code" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <font>
                    <Font name="System Italic" size="12.0" />
                </font></TextField>
            <Label text="Start Airport" GridPane.rowIndex="4" />
            <Label text="Destination Airport" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="25.0" prefWidth="328.0" spacing="20.0">
            <children>
            <Label fx:id="nfcLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="185.0" />
                <Button fx:id="ShowFlights" onAction="#showFlights" text="Show Flights" />
                <Button fx:id="StoreFlight" onAction="#storeFlight" prefHeight="25.0" prefWidth="89.0" text="Store Flight" />
            </children>
        </HBox>
      <Label fx:id="flightLabel" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="382.0" style="-fx-background-color: #e9f2f5;" />
      <HBox>
         <children>
              <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Back" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
