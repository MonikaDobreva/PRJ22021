<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefHeight="200.0" prefWidth="600.0">

            <children>
                <fx:include fx:id="menuBar" source="topMenu.fxml" />
                <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="400.0">
                    <children>
                        <Label alignment="CENTER" text="Create booking" textFill="#4f78b0">
                            <font>
                                <Font name="Calibri Bold Italic" size="25.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
                <Separator prefWidth="200.0" />
                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Label text="Flight:" />
                        <ComboBox fx:id="originApDropdown" onMouseClicked="#listOriginAirports" prefHeight="25.0" prefWidth="190.0" promptText="select flight">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </ComboBox>
                    </children>
                </HBox>
                <VBox>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Customer:" />
                                <TextField promptText="first name" />
                                <TextField layoutX="75.0" layoutY="10.0" promptText="last name" />
                                <ComboBox prefWidth="150.0" promptText="gender">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:id="m" fx:value="male" />
                                            <String fx:id="f" fx:value="female" />
                                            <String fx:id="d" fx:value="diverse" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField promptText="email" />
                        <DatePicker promptText="select birth day" />
                            </children>
                        </HBox>
                  <CheckBox mnemonicParsing="false" text="also passenger?" />
                  <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0">
                     <children>
                        <TextField layoutX="75.0" layoutY="10.0" promptText="passport number" />
                        <ComboBox prefWidth="150.0" promptText="seat" />
                     </children>
                  </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
